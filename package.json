{
  "name": "vscode-spotless-maven",
  "displayName": "Spotless Maven",
  "description": "Format your source files using Spotless via Maven",
  "version": "0.0.1",
  "publisher": "SapiensAnatis",
  "repository": {
    "url": "https://github.com/SapiensAnatis/vscode-spotless-maven"
  },
  "engines": {
    "vscode": "^1.96.1"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:pom.xml"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vscode-spotless-maven.helloWorld",
        "title": "Hello World"
      }
    ]
  },
  "scripts": {
    "vsce:package": "vsce package --no-dependencies",
    "vscode:prepublish": "pnpm run package",
    "compile": "pnpm run check-types && pnpm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "pnpm run check-types && pnpm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "10.0.10",
    "@types/node": "22.12.0",
    "@types/vscode": "1.96.0",
    "@typescript-eslint/eslint-plugin": "8.22.0",
    "@typescript-eslint/parser": "8.22.0",
    "@vscode/test-cli": "0.0.10",
    "@vscode/test-electron": "2.4.1",
    "esbuild": "0.24.2",
    "eslint": "9.19.0",
    "npm-run-all": "4.1.5",
    "typescript": "5.7.3",
    "prettier": "3.4.2"
  },
  "dependencies": {}
}
